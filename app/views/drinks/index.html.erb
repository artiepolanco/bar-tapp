<!--  This is the Drink MENU Page-->
<!-- drink.image -->

<body id="drinks">
<div style="padding: 30px"></div>
<% @drinks.each do |drink| %>
<div class="container">
<div class="card">
  <div class="card-head">
          <img src="https://s5.postimg.org/wy79025cz/nike_Logo_White.png" alt="logo" class="card-logo">
    <img src="http://www.stickpng.com/assets/images/580b57fbd9996e24bc43c099.png" alt="Beer" class="product-img">
    <div class="product-detail">
        <h2><%= drink.name %></h2><%=raw drink.description %>
      </div>
      <span class="back-text">
              BEER
            </span>
</div>
<div class="card-body">
  <div class="product-desc">
          <span class="product-title">
                  Francisco's<b>Bar</b>
                  <span class="badge">
                    New
                  </span>
          </span>
          <span class="product-caption">
                  One of a Kind
                </span>
          <span class="product-rating">
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star grey"></i>
                </span>
        </div>
        <div class="product-properties">


          <span class="product-price">
                  USD<b><%= pretty_amount drink.price %></b>
                </span>
        </div>
        <%= form_for([@bar, @bar.orders.build]) do |f| %>
        <%= f.hidden_field :bar_id %>
        <%= f.submit "Add Drink", :class => "card__addToCart" %>
        <%= hidden_field_tag :drink_id, drink.id %>
        <% end %>
</div>
</div>
</div>
<% end %>
</body>
