<p id="notice"><%= notice %></p>

<h1>Drinks</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drinks.each do |drink| %>
      <tr>
        <td><%= image_tag drink.image, :size => "130x90" %></td>
        <td><%= drink.name %></td>
        <td><%= drink.description %></td>
        <td><%= drink.price %></td>
        <td>
          <%= form_for([@bar, @bar.orders.build]) do |f| %>
            <p>
              <%= f.hidden_field :bar_id %>
            </p>
            <p>
              <%= f.submit "Add Drink", :class => "btn" %>
            </p>
            <%= hidden_field_tag :drink_id, drink.id %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
