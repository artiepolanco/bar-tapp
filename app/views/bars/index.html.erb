<p id="notice"><%= notice %></p>

<h1>Pick a bar!</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Logo</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th>Phone</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bars.each do |bar| %>
      <tr>
        <td><%= bar.name %></td>
        <td><%= image_tag bar.logo, size: "200x100"; %></td>
        <td><%= bar.address %></td>
        <td><%= bar.city %></td>
        <td><%= bar.state %></td>
        <td><%= bar.zipcode %></td>
        <td><%= bar.phone %></td>
        <td><%= bar.description %></td>
        <td><%= link_to 'Show', bar %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<br>
<div class="bs-example" data-example-id="striped-table">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Logo</th>
        <th>Bar Name</th>
        <th>Rating</th>
        <th>Address</th>
      </tr>
    </thead>
    <tbody>
      <% @client = GooglePlaces::Client.new("AIzaSyDZXTCzH0s0nEwgcAlNom-O1bLGzB3V3o0") %>
      <% res = @client.spots(25.8030863,-80.20433799999999, :types => 'bar')  %>
      <% res.each do |bar| %>
      <tr>
        <td><%= image_tag bar.photos[0].fetch_url(100)  %></td>
        <td><%= bar.name  %></td>
        <td><%= bar.rating %></td>
        <td><%= bar.vicinity %></td>
      </tr>
      <% end %>

    </tbody>
  </table>
</div>
