<p id="notice"><%= notice %></p>



<h1>Pick a bar!</h1>

<br>
<div class="bs-example" data-example-id="striped-table">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Logo</th>
        <th>Bar Name</th>
        <th>Rating</th>
        <th>Address</th>
      </tr>
    </thead>
    <tbody>
     
      <% @res.each do |bar| %>
      <tr>
        <td><%= image_tag bar.photos.first.nil? ? '' : bar.photos.first.fetch_url(100) %></td>
        <% if bar.name == @bars.find_by(name: "#{bar.name}").name%>

        <td><%= link_to bar.name, "/bars/#{@bars.find_by(name: bar.name).id}/drinks" %></td>
        <% else %>
        <td><%= "No Bar Tapp" %></td>
        <td><%= @bars.find_by(name: "#{bar.name}").name %></td>
        <td><%= bar.name %></td>
        
        <% end %>
        
        <td><%= bar.rating %></td>
        <td><%= bar.vicinity %></td>


      </tr> 
      <% end %>
    </tbody>
  </table>
</div>

